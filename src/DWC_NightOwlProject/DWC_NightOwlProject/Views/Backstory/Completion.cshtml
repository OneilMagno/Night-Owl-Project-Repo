@model DWC_NightOwlProject.Data.Material


<div class="text-center" id="title">
    <h2>Backstory Result</h2>
</div>

<div class="text-center" id="adviceBox">
    <span>There is a lot to explore in the vastness of the world, but the question lies within yourself...</span>
</div>



<h4>
    Prompt:  <br />

    @Model.Prompt
</h4>



<h4>
    Completion:  <br />
</h4>



<p id="backstoryCompletion" >@Model.Completion</p>

<br />
<br />
<button id="backstoryButton" type="button" class="btn btn-primary" onclick="downloadFile()">Download your Backstory</button>



<script>
    const downloadFile = () => {
        const link = document.createElement("a");
        const content = "@Html.Raw(Model.Completion)";
        const file = new Blob([content], {type: "text/plain"});
        link.href = URL.createObjectURL(file);
        link.download = "backstory.txt";
        link.click();
        URL.revokeObjectURL(link.href);
    };
    
</script>

